import data from "../data/seriecnextmatch.json";
type Props = {
  campionato?: string;
  nomesquadrahome?: string;
  nomesquadrahomeover?: string;
  squadrahome?: string;
  squadraover?: string;
  luogo?: string;
  data?: string;
  icona?: string;
