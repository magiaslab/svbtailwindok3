---
const title = "Squadre";
const subtitle = "Le squadre Senior e Giovanili di Basket San Vincenzo";

import Layout from "../layouts/Layout.astro";

import HeaderSmall from "../components/HeaderSmall.astro";
import ProjectCard from "../components/ProjectCards.astro";
import data from "../data/site.json";

type Props = {
  projectTitle: string;
  href: string;
  body: string;
  type?: string;
  repo?: string;
  image?: string;
  stastpb?: string;
};
---

<Layout title="Squadre">
  <main>
    <HeaderSmall title={title} subtitle={subtitle} />
    
      <section class="section">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
          <div class="grid md:grid-cols-2 sm:grid-cols-1 gap-8">
            {
              data.squadre.map(
                (
                  value: {
                    projectTitle: string;
                    href: string;
                    about: string;
                    repo?: string;
                    type?: string;
                    image?: string;
                    stastpb?: string;
                  },
                  index: number
                ) => {
                  return (
                    <ProjectCard
                      projectTitle={value.projectTitle}
                      href={value.href}
                      body={value.about}
                      type={value.type}
                      repo={value.repo}
                      image={value.image}
                      statspb={value.stastpb}
                    />
                  );
                }
              )
            }
          </div>
        </div>
      </section>
   
  </main>
</Layout>

<style></style>
