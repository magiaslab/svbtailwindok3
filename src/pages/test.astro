---
import Iconout from "../components/Iconout.astro";
import Iconhouse from "../components/Iconhouse.astro"
import data from "../data/seriecnextmatch.json";
type Props = {
  campionato?: string;
  nomesquadrahome?: string;
  nomesquadrahomeover?: string;
  squadrahome?: string;
  squadraover?: string;
  luogo?: string;
  data?: string;
  icona?: string;
};
 import Layout from "../layouts/Layout.astro";
 import Timeline from "../components/Timeline.astro";
 
 ---


 <Layout title="Test">

<div class="flex flex-col w-full mb-10  border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700 p-2 mt-32">
    <h1 class="dark:text-white text-red-700 font-black m-2 text-center text-4xl mb-5">Prossime Partite</h1>
   
    <div class=" flex justify-center border-gray-200 bg-gray-50 dark:bg-gray-800 dark:border-gray-700 rounded-lg">  
     
    <div class="items-center grid md:grid-cols-3 w-full grid-cols-1">
      {data.map((match) => (
      <div class="text-center rounded border-gray-200 bg-gray-100 dark:bg-gray-600 dark:border-gray-700 m-1">
        <div class="grid grid-cols-3 grid-rows-1">
          
          <div class="flex flex-col justify-center items-center"><img class="w-20 h-20 rounded-full mb-5" src={match.squadrahome} alt="Rounded avatar">
            <p>{match.nomesquadrahome}</p>
            </div>
            <div class="flex justify-center items-center  m-2 flex-col">
              <div class="text-center flex items-center justify-center h-20 rounded border-gray-200 bg-gray-100 dark:bg-gray-600 dark:border-gray-700 text-2xl font-black"> <h class="dark:text-white text-black">{match.campionato}</h></div>
   
              <Iconout/>
                  <p class="text-gray-500 dark:text-white text-xs italic mt-2">{match.luogo}</p>
                  <p class="text-gray-500 dark:text-white text-xs">{match.data}</p></div>
           <div class="flex flex-col justify-center items-center m-2"><img class="w-20 h-20 rounded-full mb-5" src={match.squadraover} alt="Rounded avatar">
            <p>{match.nomesquadrahomeover}</p>
            </div>
  
        </div>
      </div>
      ) )}
      </div>
  </div>


