              <Iconhouse/>
                  <p class="text-gray-500 dark:text-white text-xs italic mt-2">{match.luogo}</p>
                  <p class="text-gray-500 dark:text-white text-xs">{match.data}</p></div>
           <div class="flex flex-col justify-center items-center m-2"><img class="w-20 h-20 rounded-full mb-5" src={match.squadraover} alt="Rounded avatar">
            <p class="text-xs text-black dark:text-white">{match.nomesquadrahomeover}</p>
