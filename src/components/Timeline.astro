---
import Heading from "./Heading.astro";

const heading = "Calendario Serie C Unica Girone A";
const dates = ["Giovedi 16 Novembre 2023", "November 2017", "April 2020"];
const info = [
  "Garden Toscana Resort vs Montevarchi",
  "Frontend Web Developer (Atmosphere IoT Corp.)",
  "Freelance Web Developer (Shadow Stack LLC)",
];
const details = [
  "Pala Lauro Giovani ore 21:15 - Recupero match del  04/11/2023",
  "Freelance Web Developer for static and WordPress sites, web applications with React, sales oriented tasks, consulting on the latest and best tools in the industry, and much more.",
];
---

<Heading heading={heading} />
<div class="mb-12 px-8">
  <ol class="relative border-l border-gray-200 dark:border-gray-700">
    {
      dates.map((date) => {
        return (
          <li class="mb-10 ml-4">
            <div class="absolute w-3 h-3 bg-primary rounded-full mt-1.5 -left-1.5 border border-white bg-red-700" />
            <time class="mb-5 text-sm font-normal leading-none text-primary dark:text-white">
              {date}
            </time>
            <a href="#" class="block mt-5 max-w-lm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
              <div class="grid grid-cols-2 grid-rows-1 gap-2">
    <div >
      <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{info[dates.indexOf(date)]}</h5>
            <p class="font-normal text-gray-700 dark:text-gray-400">{details[dates.indexOf(date)]}</p>
      </div>
</div>
          
            </a>
            
          </li>
        );
      })
    }
  </ol>
</div>
