---
const { title, url, description, image, tags, date } = Astro.props

const dateOptions: object = {
	year: "2-digit",
	month: "numeric",
	day: "numeric",
};

const formattedPublishDate = new Date(date).toLocaleDateString(
	"it-IT",
	dateOptions
);


---




<div class="max-w-sm bg-slate-200 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <div class="flex justify-between items-center  text-gray-500">
        <span class="bg-red-700 text-white text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-red-700 dark:text-white m-5">
            
            {tags}
        </span>
        <span class="bg-gray-700 text-white text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-gray-600 dark:text-white m-5">{formattedPublishDate}</span>
    </div>
    <a href={url}>
        <img class="" src={image} alt="" />
    </a>
    <div class="p-5">
        <a href={url}>
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{description}</p>
        <a href={url} class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline">
            Leggi tutto
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
    </div>
</div>



