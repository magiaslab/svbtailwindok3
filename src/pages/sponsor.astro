        </div>
        <!-- Item -->
        <div class="flex items-center justify-center">
          <img src="https://assets.website-files.com/63904f663019b0d8edf8d57c/63982e44075471d57debfe23_Chase%20Logo.svg" alt="" class="mx-auto inline-block max-w-[80%] max-[767px]:max-w-full" />
        </div>
        <!-- Item -->
        <div class="flex items-center justify-center">
          <img src="https://assets.website-files.com/63904f663019b0d8edf8d57c/63982e46c9353e092ba4b774_Walmart%20Logo.svg" alt="" class="mx-auto inline-block max-w-[80%] max-[767px]:max-w-full" />
        </div>
        <!-- Item -->
        <div class="flex items-center justify-center">
          <img src="https://assets.website-files.com/63904f663019b0d8edf8d57c/63982efc554105ffbeb5b691_Slack%20Logo%20(2).svg" alt="" class="mx-auto inline-block max-w-[80%] max-[767px]:max-w-full" />
