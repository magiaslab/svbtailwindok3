---
import { string } from "astro/zod";
const response = await fetch(
  "https://opensheet.elk.sh/123iCvy-kD1vFcSOmKzo_iBG_TfdP1DJHwDij39hTsXQ/3"
);
const data = await response.json();
import HeaderSmall from "../components/HeaderSmall.astro"
const title = "Statistiche";
const subtitle = "Tutte le statistiche del Basket San Vincenzo";
---
<HeaderSmall title={title} subtitle={subtitle} />
<h2
    class="mb-10 mt-20 text-3xl tracking-tight font-extrabold text-gray-900 dark:text-white text-center"
  >
   Classifica Serie C 2023/2024 Girone A
  </h2>

<div class="relative overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-700 dark:text-gray-400 mb-10">
        <thead class="text-bold text-gray-700 uppercase bg-red-700 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th data-tooltip-target="tooltip-posizione" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  Posizione
              </th>
              <th data-tooltip-target="tooltip-squadra" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    Squadra
                </th>
                <th data-tooltip-target="tooltip-punti" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    Punti
                </th>
                <th  data-tooltip-target="tooltip-puntipartita" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  P.ti/P
                </th>
                <th data-tooltip-target="tooltip-default" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    G
                </th>
                <th data-tooltip-target="tooltip-default" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  V
              </th>
              <th data-tooltip-target="tooltip-default" scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  P
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  %
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  S
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  PF
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  PS
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  Q
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  PF/P
              </th>
              <th scope="col" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  PS/P
              </th>
            </tr>
        </thead>
        <tbody>
          {
            data.map((classifica) => (
  
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                   {classifica.posizione}
                </th>
                <td class="px-6 py-4">
                  {classifica.squadra}
                </td>
                <td class="px-6 py-4">
                  {classifica.punti}
                </td>
                <td class="px-6 py-4">
                  {classifica.ptip}
                </td>
                <td class="px-6 py-4">
                  {classifica.G}
                </td>
                <td class="px-6 py-4">
                  {classifica.V}
                </td>
                <td class="px-6 py-4">
                  {classifica.P}
                </td>
                <td class="px-6 py-4">
                  {classifica.perc}
                </td>
                <td class="px-6 py-4">
                  {classifica.S}
                </td>
                <td class="px-6 py-4">
                  {classifica.PF}
                </td>
                <td class="px-6 py-4">
                  {classifica.PS}
                </td>
                <td class="px-6 py-4">
                  {classifica.Q}
                </td>
                <td class="px-6 py-4">
                  {classifica.PFP}
                </td>
                <td class="px-6 py-4">
                  {classifica.PSP}
                </td>
            </tr>
            
            )
          )}
        </tbody>
    </table>
  </div>
  <div id="tooltip-posizione" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
    posizione in classifica
    <div class="tooltip-arrow" data-popper-arrow></div>
</div><div id="tooltip-squadra" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
    Nome della squadra
    <div class="tooltip-arrow" data-popper-arrow></div>
  </div><div id="tooltip-punti" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
    Punti complessivi
    <div class="tooltip-arrow" data-popper-arrow></div>
</div>