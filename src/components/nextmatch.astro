    <div class=" flex justify-center border-gray-200 bg-gray-50 dark:bg-gray-800 dark:border-gray-700 rounded-lg">  
     
    <div class="items-center grid md:grid-cols-3 w-full grid-cols-1">
      {data.map((match) => (
      <div class="text-center rounded border-gray-200 bg-gray-200 dark:bg-gray-600 dark:border-gray-700 m-1">
        <div class="grid grid-cols-3 grid-rows-1">
          
          <div class="flex flex-col justify-center items-center"><img class="w-20 h-20 rounded-full mb-5" src={match.squadrahome} alt="Rounded avatar">
            <p class="text-xs text-black dark:text-white">{match.nomesquadrahome}</p>
            </div>
            <div class="flex justify-center items-center  m-2 flex-col">
