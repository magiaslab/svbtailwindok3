---
import BaseLayout from "./Layout.astro";
const { frontmatter } = Astro.props;
const dateOptions: object = {
	year: "2-digit",
	month: "numeric",
	day: "numeric",
};

const formattedPublishDate = new Date(frontmatter.pubDate).toLocaleDateString(
	"it-IT",
	dateOptions
);
---
<BaseLayout title={frontmatter.title}>
  
  
<main class="pt-8 pb-16 lg:pt-16 lg:pb-24 bg-white dark:bg-gray-900 antialiased rounded-lg mb-10">
  <div class="flex justify-between px-4 mx-auto max-w-screen-xl ">
      <article class="mx-auto w-full max-w-2xl format format-sm sm:format-base lg:format-lg format-blue dark:format-invert">
          <header class="mb-4 lg:mb-6 not-format">
            <span class="bg-red-700 text-white text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-red-700 dark:text-white mb-5">
            
              {frontmatter.tags}
          </span>
              <address class="flex items-center mb-6 not-italic  text-gray-900 dark:text-white">
                <p>Articolo pubblicato il: {formattedPublishDate.toString().slice(0,10)}</p>
              </address>
              <h1 class="mb-4 text-3xl font-extrabold leading-tight text-gray-900 lg:mb-6 lg:text-4xl dark:text-white">{frontmatter.title}</h1>
              <h4 class="leading-tight text-gray-900 lg:mb-6 lg:text-1xl dark:text-white" >{frontmatter.description}</h4>
              <p class="text-gray-900 dark:text-white mb-5 mt-5" >Scritto da: {frontmatter.author}</p>
              <img class="rounded-lg" src={frontmatter.image.url} width="600" alt={frontmatter.image.alt} />
          </header>
         
          <article class="prose prose-slate dark:prose-invert">
            <slot/>
          </article>
         
          </main>